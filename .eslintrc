{
  "root": true,
  "extends": "@upstatement",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "wp": "readonly"
  },
  "plugins": ["react"],
  "overrides": [
    {
      "files": ["./src/**/*.js", "./src/index.js"],
      "extends": "@upstatement/eslint-config/react",
      "rules": {
        "react/react-in-jsx-scope": "off"
      },
      "settings": {
        "react": {
          "version": "^16.9.0"
        }
      }
    }
  ]
}
